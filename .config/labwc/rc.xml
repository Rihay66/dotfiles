<?xml version="1.0"?>
<!--
  This is a very simple config file with many options missing. For a complete
  set of options with comments, see docs/rc.xml.all
-->
<labwc_config>
  <core>
    <!--
      To configure adaptive sync
    -->
    <adaptiveSync>yes</adaptiveSync>
  </core>
  <theme>
    <name>catppuccin-mocha</name>
    <cornerRadius>14</cornerRadius>
    <font name="sans" size="10"/>
    <dropShadows>yes</dropShadows>
    <titlebar>
      <showTitle>no</showTitle>
    </titlebar>
  </theme>
  <desktops number="10" />
  <keyboard>
    <keybind key="W-t">
      <action name="Execute" command="kitty"/>
    </keybind>
    <keybind key="W-z">
      <action name="Execute" command="wofi --show drun"/>
    </keybind>
    <keybind key="W-b">
      <action name="Execute" command="blueman-manager"/>
    </keybind>
    <keybind key="W-s">
      <action name="Execute" command="python ~/.config/wofi/wofiwebsearch.py"/>
    </keybind>
    <keybind key="W-m">
      <action name="Iconify"/>
    </keybind>
    
    <keybind key="W-S-c">
      <action name="Reconfigure"/>
    </keybind>
    
    <keybind key="W-S-p">
      <action name="Execute" command="python ~/.config/wofi/labwcwofipowermenu.py"/>
    </keybind>
    
    <keybind key="W-w">
      <action name="ToggleAlwaysOnTop"/>
    </keybind>
    <keybind key="W-S-w">
      <action name="ToggleOmnipresent"/>
    </keybind>
    
    <keybind key="W-S-q">
      <action name="Close"/>
    </keybind>
    <keybind key="A-XF86LaunchB">
      <action name="Close"/>
    </keybind>

    <keybind key="A-Tab">
      <action name="NextWindow"/>
    </keybind>
    <keybind key="W-Tab">
      <action name="NextWindow"/>
    </keybind>

    <keybind key="W-f">
      <action name="ToggleMaximize" direction="both"/>
    </keybind>
    <keybind key="W-S-f">
      <action name="ToggleFullscreen"/>
    </keybind>

    <keybind key="XF86AudioRaiseVolume">
      <action name="Execute" command="amixer set Master 2%+"/>
    </keybind>
    <keybind key="XF86AudioLowerVolume">
      <action name="Execute" command="amixer set Master 2%-"/>
    </keybind>
    <keybind key="XF86AudioMute">
      <action name="Execute" command="amixer set Master 1+ toggle"/>
    </keybind>

    <keybind key="XF86MonBrightnessUp">
      <action name="Execute" command="brightnessctl set +5%"/>
    </keybind>
    <keybind key="XF86MonBrightnessDown">
      <action name="Execute" command="brightnessctl set 5%-"/>
    </keybind>

    <keybind key="W-S-Left">
      <action name="SnapToEdge" direction="left" />
    </keybind>
    <keybind key="W-S-Right">
      <action name="SnapToEdge" direction="right" />
    </keybind>
    <keybind key="W-S-s">
      <action name="Execute" command="gscreenshot -s -f Pictures/Screenshots -n"/>
    </keybind>

    <keybind key="W-1">
      <action name="GoToDesktop" to="1" wrap="no"/>
    </keybind>
    <keybind key="W-2">
      <action name="GoToDesktop" to="2" wrap="no"/>
    </keybind>
    <keybind key="W-3">
      <action name="GoToDesktop" to="3" wrap="no"/>
    </keybind>
    <keybind key="W-4">
      <action name="GoToDesktop" to="4" wrap="no"/>
    </keybind>
    <keybind key="W-5">
      <action name="GoToDesktop" to="5" wrap="no"/>
    </keybind>
    <keybind key="W-6">
      <action name="GoToDesktop" to="6" wrap="no"/>
    </keybind>
    <keybind key="W-7">
      <action name="GoToDesktop" to="7" wrap="no"/>
    </keybind>
    <keybind key="W-8">
      <action name="GoToDesktop" to="8" wrap="no"/>
    </keybind>
    <keybind key="W-9">
      <action name="GoToDesktop" to="9" wrap="no"/>
    </keybind>
    <keybind key="W-0">
      <action name="GoToDesktop" to="10" wrap="no"/>
    </keybind>

    <keybind key="W-S-1">
      <action name="SendToDesktop" to="1" follow="no" wrap="no"/>
    </keybind>
    <keybind key="W-S-2">
      <action name="SendToDesktop" to="2" follow="no"  wrap="no"/>
    </keybind>
    <keybind key="W-S-3">
      <action name="SendToDesktop" to="3" follow="no"  wrap="no"/>
    </keybind>
    <keybind key="W-S-4">
      <action name="SendToDesktop" to="4" follow="no" wrap="no"/>
    </keybind>
    <keybind key="W-S-5">
      <action name="SendToDesktop" to="5" follow="no" wrap="no"/>
    </keybind>
    <keybind key="W-S-6">
      <action name="SendToDesktop" to="6" follow="no" wrap="no"/>
    </keybind>
    <keybind key="W-S-7">
      <action name="SendToDesktop" to="7" follow="no"  wrap="no"/>
    </keybind>
    <keybind key="W-S-8">
      <action name="SendToDesktop" to="8" follow="no" wrap="no"/>
    </keybind>
    <keybind key="W-S-9">
      <action name="SendToDesktop" to="9" follow="no" wrap="no"/>
    </keybind>
    <keybind key="W-S-0">
      <action name="SendToDesktop" to="10" follow="no" wrap="no"/>
    </keybind>
  </keyboard>
  <mouse>
  <default />
    <context name="Root">
      <mousebind button="Right" action="Press">
        <action name="ShowMenu" menu="some-custom-menu" />
      </mousebind>
    </context>
  </mouse>
  <placement>
    <policy>cascade</policy>
  </placement>
  <libinput>
    <device>  
      <naturalScroll>no</naturalScroll>
    </device>
  </libinput>
  <windowSwitcher show="yes" preview="yes" outlines="yes" allWorkspaces="no">
  <fields>
    <field content="icon" width="25%" />
    <field content="desktop_entry_name" width="25%" />
    <field content="title" width="50%" />
  </fields>
</windowSwitcher>
</labwc_config>
